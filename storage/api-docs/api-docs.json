            "get": {
                "tags": [
                    "Clients"
                ],
                "summary": "Get clients",
                "description": "Returns a list of clients",
                "operationId": "getClients",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
