                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Portfolio": {
                "title": "Portfolio",
                "description": "Portfolio model",
                "properties": {
                    "id": {
                        "description": "Portfolio ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "name": {
                        "description": "Portfolio name",
                        "type": "string"
                    },
                    "created_at": {
                        "description": "Creation date",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Last update date",
                        "type": "string",
                        "format": "date-time"
                    }
